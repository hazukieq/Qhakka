<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3sp"
    app:cardElevation="2sp"
    app:cardCornerRadius="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/qmui_config_color_white"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/shz"
                    android:textSize="45.0sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:lineSpacingExtra="6.0dip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="红"/>
            </FrameLayout>
            <LinearLayout
                android:layout_marginLeft="2dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/sbh"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="2.0dip"
                    android:paddingBottom="7.0sp"
                    android:lineSpacingExtra="6dp"
                    android:textColor="?attr/qmui_config_color_gray_1"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/shk_p"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:lineSpacingExtra="6dp"
                    android:paddingLeft="2.0dip"
                    android:paddingBottom="7.0sp"
                    android:textColor="?attr/qmui_config_color_gray_1"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/scmn_p"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:lineSpacingExtra="6dp"
                    android:paddingLeft="2.0dip"
                    android:paddingBottom="7.0sp"
                    android:textColor="?attr/qmui_config_color_gray_1"
                    android:textSize="14sp"
                    android:text="普通话：哈哈哈"/>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/app_color_blue_2_disabled"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_red"
            android:orientation="vertical">
            <TextView
                android:id="@+id/sva"
                android:layout_marginTop="3sp"
                android:layout_marginLeft="3sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="6dp"
                android:paddingLeft="2.0dip"
                android:paddingBottom="7.0sp"
                android:textColor="?attr/qmui_config_color_gray_1"
                android:textSize="14sp"
                android:text="一身地：吾哈哈" />


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
